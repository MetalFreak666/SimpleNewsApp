<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/options_select_source_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/options_select_source_text"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/options_jp_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/jp_flag_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/options_select_source_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/options_no_icon"/>

    <ImageView
        android:id="@+id/options_no_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/no_flag_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/options_select_source_text"
        app:layout_constraintStart_toEndOf="@id/options_jp_icon"
        app:layout_constraintEnd_toStartOf="@id/options_pl_icon"/>

    <ImageView
        android:id="@+id/options_pl_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pl_flag_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/options_select_source_text"
        app:layout_constraintStart_toEndOf="@id/options_no_icon"
        app:layout_constraintEnd_toStartOf="@id/options_us_icon"/>

    <ImageView
        android:id="@+id/options_us_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/us_flag_icon"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/options_select_source_text"
        app:layout_constraintStart_toEndOf="@id/options_pl_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/save_options_fab"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/fab_check"
        android:enabled="false"
        app:fabSize="normal"
        app:backgroundTint="@color/source_color_orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>