<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Main app theme style -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/whiteBackgroundColor</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Navigation menu style -->
    <style name="BottomNavigationMenuStyle" parent="AppTheme">
        <item name="backgroundTint">@color/menu_background_color</item>
        <item name="itemIconTint">@drawable/navigation_menu_tab_colors</item>
        <item name="itemTextColor">@drawable/navigation_menu_tab_colors</item>
    </style>

    <!-- Recycler item style -->
    <style name="ArticlePublishedDateStyleText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ArticleSourceStyleText" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/source_color_orange</item>
    </style>

    <style name="ArticleTitleStyleText" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ArticleDescriptionStyleText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <!-- Article detail fragment style -->
    <style name="ArticleDetailSourceText" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/source_color_orange</item>
    </style>

    <style name="ArticleDetailPublishedDateText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ArticleDetailTitleText" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="ArticleDetailDescriptionText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

</resources>